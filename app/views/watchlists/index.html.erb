<% @watchlists.each do |watchlist| %>
    <div>
      <div>
        <b><%= watchlist.name %></b>
        <%= link_to 'Edit', edit_watchlist_path(watchlist) %>
      </div>
      <%= render :partial => 'show_stock_performance', locals: {watchlist: watchlist} %>
      <%= form_tag(watchlist_url(watchlist), method: 'DELETE') do %>
          <%= submit_tag("Delete", class: 'button') %>
      <% end %>
    </div>
<% end %>

<br/>

<%= link_to 'New Watchlist', new_watchlist_path %>
